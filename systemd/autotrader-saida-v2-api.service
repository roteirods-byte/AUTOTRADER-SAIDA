[Unit]
Description=AUTOTRADER-SAIDA V2 - API (Node)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=roteiro_ds
WorkingDirectory=/home/roteiro_ds/AUTOTRADER-SAIDA-V2
Environment=PORT=8096
Environment=DATA_DIR=/home/roteiro_ds/AUTOTRADER-SAIDA-V2/data
ExecStart=/usr/bin/env node /home/roteiro_ds/AUTOTRADER-SAIDA-V2/server.js
Restart=always
RestartSec=2

[Install]
WantedBy=multi-user.target
