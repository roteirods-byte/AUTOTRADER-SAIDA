# /etc/systemd/system/autotrader-pro-v1-api.service
[Unit]
Description=AUTOTRADER-PRO-V1 API (Node)
After=network.target

[Service]
Type=simple
User=roteiro_ds
WorkingDirectory=/home/roteiro_ds/AUTOTRADER-PRO/current/api
Environment=NODE_ENV=production
Environment=PORT=8095
# FIX: aponta para a pasta onde o pro.json real Ã© gerado
Environment=DATA_DIR=/home/roteiro_ds/AUTOTRADER-PRO/data
ExecStart=/usr/bin/node /home/roteiro_ds/AUTOTRADER-PRO/current/api/server.js
Restart=always
RestartSec=2

[Install]
WantedBy=multi-user.target
