# /etc/systemd/system/autotrader-saida.service
[Unit]
Description=AUTOTRADER-SAIDA (Node/Express)
After=network.target

[Service]
Type=simple
User=roteiro_ds
WorkingDirectory=/home/roteiro_ds/AUTOTRADER-SAIDA
Environment=NODE_ENV=production
Environment=PORT=8096
# Environment=DATA_DIR=/home/roteiro_ds/AUTOTRADER-SAIDA/data
ExecStart=/usr/bin/node /home/roteiro_ds/AUTOTRADER-SAIDA/server.js
Restart=always
RestartSec=2

[Install]
WantedBy=multi-user.target
